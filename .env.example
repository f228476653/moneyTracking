# ============================================
# Django Configuration
# ============================================

# REQUIRED: Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this

# Set to False in production!
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1


# ============================================
# Database Configuration
# ============================================

# For LOCAL DEVELOPMENT (SQLite)
# --------------------------------
DB_ENGINE=django.db.backends.sqlite3
# DB_NAME is not used for SQLite (uses db.sqlite3 by default)


# For PRODUCTION (Cloud SQL PostgreSQL)
# --------------------------------
# Uncomment these for production deployment:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=money_tracking
# DB_USER=postgres
# DB_PASSWORD=your-secure-password-here
# DB_HOST=/cloudsql/moneytracking-472503:us-central1:money-tracking-db
# DB_PORT=5432


# ============================================
# Optional Settings
# ============================================

# File Upload Settings (optional - defaults in settings.py)
# FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10 MB
# DATA_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10 MB


# ============================================
# Google Cloud Settings (for deployment)
# ============================================

# GCP_PROJECT_ID=moneytracking-472503
# GCP_REGION=us-central1
# GCP_SQL_INSTANCE=money-tracking-db


# ============================================
# Notes
# ============================================

# 1. NEVER commit this file with real credentials!
# 2. Copy this file: cp .env.example .env
# 3. Edit .env with your actual values
# 4. .env is automatically ignored by git (.gitignore)
# 5. For production, use Google Secret Manager for sensitive values
